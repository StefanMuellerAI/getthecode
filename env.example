# ==============================================
# Get The Code - Environment Configuration
# ==============================================
# IMPORTANT: Copy this file to .env and fill in your actual values!
# NEVER commit .env to version control!

# ==============================================
# ENVIRONMENT MODE
# ==============================================
# Set to "production" to enable strict validation of all secrets
# Set to "development" for local testing with relaxed validation
ENVIRONMENT=development

# ==============================================
# DATABASE (REQUIRED IN PRODUCTION)
# ==============================================
POSTGRES_USER=your_secure_username
POSTGRES_PASSWORD=your_very_secure_password_here
POSTGRES_DB=getthecode

# ==============================================
# OPENAI API (REQUIRED)
# ==============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# SECRET CODE (DEPRECATED)
# ==============================================
# NOTE: This is no longer used! Gift codes are now stored in the database.
# Add gift codes via the Admin Dashboard at /stats/[key]
# SECRET_CODE=DEPRECATED

# ==============================================
# CHALLENGE SETTINGS
# ==============================================
START_DATE=2025-01-01
JACKPOT_PER_MONTH=100

# ==============================================
# CORS ORIGINS (comma-separated for production)
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================
# OPTIONAL: OpenAI Model
# ==============================================
OPENAI_MODEL=gpt-4o

# ==============================================
# PERFORMANCE: Redis Configuration
# ==============================================
# Redis is used for caching and distributed rate limiting
# In Docker Compose, this is set automatically to redis://redis:6379/0
# REDIS_URL=redis://localhost:6379/0

# ==============================================
# PERFORMANCE: Worker Configuration
# ==============================================
# Number of Gunicorn workers (default: 4)
# WEB_CONCURRENCY=4

# Temporal worker concurrency settings
# WORKER_MAX_CONCURRENT_ACTIVITIES=100
# WORKER_MAX_CONCURRENT_WORKFLOWS=100

# ==============================================
# STATS ADMIN DASHBOARD
# ==============================================
# Secret key for accessing /stats/[key] dashboard
# Generate a secure random string for production!
STATS_SECRET_KEY=your-secure-stats-key-here

# ==============================================
# FRONTEND URL (REQUIRED FOR REDEMPTION LINKS)
# ==============================================
# The public URL of your frontend (for generating redemption links)
FRONTEND_URL=https://your-domain.com
